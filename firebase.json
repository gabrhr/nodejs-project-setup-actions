{
  "functions": {
    "source": "functions"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
       {
        "source": "/api/**",
        "function": "app"
      },
      {
        "source": "/",
        "function": "app"
      }
    ]
  }
}
